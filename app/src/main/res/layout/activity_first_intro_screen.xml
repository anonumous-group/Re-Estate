<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.auth.FirstIntroScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/skip"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:fontFamily="@font/inter_28pt_bold"
        android:layout_gravity="end"
        android:id="@+id/btn_skip"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:layout_weight="1"
        android:src="@drawable/apartment"
        android:padding="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Find Your Perfect Home With Us Today"
            android:textColor="@color/blue"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_28pt_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We Don't Just Sell Houses, We Sell Excuses to Have More Closet Space Than Your Friends"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_28pt_medium"
            android:textColor="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_circle_left"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="@color/blue"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="#46266CFD"
                    android:layout_marginHorizontal="6dp"/>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/rounded_corner_bg"
                    android:backgroundTint="#46266CFD"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/arrow_circle_right"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>